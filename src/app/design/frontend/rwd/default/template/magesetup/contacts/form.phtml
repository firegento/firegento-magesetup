            </li>
            <?php if (Mage::helper('magesetup/contacts')->isAcceptAgreement()): ?>
                <li>
                    <div class="input-box">
                        <label for="accept-agreement">
                            <input name="accept-agreement" id="accept-agreement" title="" value="" class="input-checkbox validate-required-accept-agreement" type="checkbox" >
